<% content_for :head do %> 
  <meta title="User Index">
  <meta name="description" content="  ">
<% end %>



<h1> Registered Users </h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th> Name </th>
        <th> Email Address </th>
        <th> Admin? </th> 
        <th> Articles </th>
        <th> Comments </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do  |user| -%>
        <tr>
          <td> <%= link_to user.name, edit_user_path(user.id) -%>  </td>
          <td> <%= user.email -%> </td>
          <td> <%= user.admin? -%> </td>
          <td> Link to Articles by User </td>
          <td> Link to Comments by User </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>