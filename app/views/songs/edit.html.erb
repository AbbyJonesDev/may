<% content_for :head do %> 
  <meta title="Edit Song">
  <meta name="description" content="Edit an existing song ">
<% end %>

<h2> Edit <%= @song.title -%> </h2> 

<%= simple_form_for @song, :html => {:multipart => true } do |f| %>
  <%= f.input :title, required: true %>
  <%= f.input :description, required: true %>
  <%= f.input :scripture %>
  <%= f.input :copyright, :as => :date, :input_html => { :class => 'date_picker' } %>
  <%= f.input :CCLI %>
  <%= f.input :keywords %>
  <%= f.input :mp3, :as => :file %>
  <%= f.input :chord_chart, :as => :file %>
  <%= f.button :submit  %>
<% end %>